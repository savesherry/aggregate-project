<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/all_HW_50"
    android:background="@color/white"
    android:paddingLeft="@dimen/all_MP_10"
    android:paddingRight="@dimen/all_MP_10">

    <TextView
        android:id="@+id/itemTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16" />

    <ImageView
        android:id="@+id/itemChoice"
        android:layout_width="@dimen/all_HW_30"
        android:layout_height="@dimen/all_HW_30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_choice"
        android:visibility="gone" />

    <View
        android:id="@+id/itemLine"
        style="@style/gray_line"
        android:layout_alignParentBottom="true" />

</RelativeLayout>